[defaults]
inventory = ./inventories/hosts.yml
host_key_checking = False
timeout = 30
gathering = smart
fact_caching = memory
# This is the path to your vault password file
vault_password_file = /PATH/TO/YOUR/VAULT-PASSWD-FILE

[ssh_connection]
ssh_args = -o ControlMaster=auto -o ControlPersist=60s -o StrictHostKeyChecking=no
pipelining = True